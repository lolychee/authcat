<%= form_with model: @user, url: sign_up_path, html: { class: "pure-form pure-form-aligned sign-up-form" }, builder: Dummy::FormBuilder do |f| %>

  <%= field_set_tag "Sign Up" do %>
    <%= f.field_group :email, class: "pure-control-group" do %>
      <%= f.label :email %>
      <%= f.text_field :email, placeholder: "Email" %>
      <%= f.error_messages :email %>
    <% end %>

    <%= f.field_group :password, class: "pure-control-group" do %>
      <%= f.label :password %>
      <%= f.password_field :password, placeholder: "Password" %>
      <%= f.error_messages :password %>
    <% end %>
  <% end %>
  <div class="pure-controls">
    <%= f.submit "Sign Up", class: "pure-button pure-button-primary" %>
  </div>
<% end %>
