<div class="main-page">
  <% if user_signed_in? %>

    <table class="pure-table">
      <thead>
        <tr><th colspan="2">Current User</th></tr>
      </thead>
      <% current_user.attributes.each do |key, value| %>
        <tr><td><%= key %></td><td><%= value %></td></tr>
      <% end %>
    </table>

  <% else %>

    <%= link_to "Sign In", sign_in_path %>

  <% end %>
</div>
