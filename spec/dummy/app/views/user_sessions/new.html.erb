<%= form_with(model: @user_session, url: sign_in_path(redirect_to: params[:redirect_to]), html: { class: "pure-form pure-form-stacked sign-in-form" }, builder: Dummy::FormBuilder) do |f| %>

  <%= field_set_tag "Sign In" do %>
    <%= f.field_group :identifier, class: "pure-control-group" do %>
      <%= f.label :identifier %>
      <%= f.text_field :identifier, placeholder: "Identifier", class: "pure-input-1" %>
      <%= f.error_messages :identifier %>
    <% end %>

    <%= f.field_group :password, class: "pure-control-group" do %>
      <%= f.label :password %>
      <%= f.password_field :password, placeholder: "Password", class: "pure-input-1" %>
      <%= f.error_messages :password %>
    <% end %>

    <%= f.label :remember_me, class: "pure-checkbox" do %>
      <%= f.check_box :remember_me %> remember me
    <% end %>
  <% end %>

  <%= f.submit "Sign In", class: "pure-button pure-input-1 pure-button-primary" %>
<% end %>
