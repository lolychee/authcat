<%= form_for(@user, url: basic_sign_in_path, method: :post) do |f| %>

  <div>
    <%= f.label :email %>
    <%= f.text_field :email %>
    <%= content_tag :div, @user.errors.full_messages_for(:email).first if @user.errors.include?(:email) %>
  </div>
  <div>
    <%= f.label :password %>
    <%= f.password_field :password %>
    <%= content_tag :div, @user.errors.full_messages_for(:password).first if @user.errors.include?(:password) %>
  </div>
  <div>
    <%= f.check_box :remember_me %> remember me
  </div>

  <%= f.submit 'Sign In' %>
<% end %>
